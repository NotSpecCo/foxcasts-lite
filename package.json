{
  "private": true,
  "name": "foxcasts-lite",
  "version": "2.1.0",
  "license": "MIT",
  "scripts": {
    "start": "HTTPS=true preact watch --https --no-sw",
    "build": "preact build --no-prerender --no-inline-css --no-sw --no-esm && cp ./manifest.webapp ./build/manifest.webapp",
    "build:analyze": "preact build --no-prerender --no-inline-css --no-sw --no-esm --json",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest ./tests",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/garredow/foxcasts-lite.git"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warning",
        {
          "allowExpressions": true
        }
      ]
    }
  },
  "dependencies": {
    "date-fns": "^2.25.0",
    "foxcasts-core": "^3.0.0",
    "lodash.kebabcase": "^4.1.1",
    "mai-ui": "^0.2.1",
    "preact": "^10.3.1",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "rxjs": "^7.4.0",
    "xml-formatter": "^2.4.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/chai": "^4.2.21",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@types/lodash.kebabcase": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "archiver": "^5.3.0",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.0",
    "semantic-release": "^18.0.0",
    "sirv-cli": "^1.0.0-next.3",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  },
  "browserslist": [
    "Kaios 2.5",
    "Firefox 48",
    "Chrome 90"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
